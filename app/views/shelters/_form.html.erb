<%= form_for @shelter, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :category, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.select :category, options_for_select([["Select One", ""], "Car", "Van", "Camper/RV", "Tent", "Make Shift Structure"]), :class => "col-md-10 form-control"  %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit 'Submit Count', :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  count_index_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
